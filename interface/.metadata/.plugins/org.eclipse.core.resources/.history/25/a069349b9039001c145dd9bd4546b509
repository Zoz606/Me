#include <avr/io.h>
#include "std_macros.h"

void EEPROM_vWrite(unsigned short address, unsigned char data) {
	EEARL=(char)address;
		EEARH=(char)(address>>8);
	EEDR = data;
	SET_BIT(EECR, EEMWE);
	SET_BIT(EECR, EEWE);
	while (READ_BIT(EECR, EEWE) == 1);
}

unsigned char EEPROM_u8Read(unsigned short address) {
	EEAR = address;
	SET_BIT(EECR, EERE);
	return EEDR;
}

