#include <avr/io.h>
#include "std_macros.h"
void dioSetPinDir (char port,char pin,char dir) {
	switch (port) {
		case 'A':
		case 'a':
			if (dir == 1) {
				SET_BIT(DDRA, pin);
			} else {
				CLR_BIT(DDRA, pin);
			}
			break;

		case 'B':
		case 'b':
			if (dir == 1) {
				SET_BIT(DDRB, pin);
			} else {
				CLR_BIT(DDRB, pin);
			}
			break;

		case 'C':
		case 'c':
			if (dir == 1) {
				SET_BIT(DDRC, pin);
			} else {
				CLR_BIT(DDRC, pin);
			}
			break;

		case 'D':
		case 'd':
			if (dir == 1) {
				SET_BIT(DDRD, pin);
			} else {
				CLR_BIT(DDRD, pin);
			}
			break;
	}
}

